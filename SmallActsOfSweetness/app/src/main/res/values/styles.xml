<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="HomeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_button_height</item>
        <item name="android:background">@drawable/home_button_bg</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginBottom">@dimen/home_button_margin</item>
    </style>

    <style name="StatusRecentLabel">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatusRecentTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatusRecentMessage">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatusRecentDate">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatusCountLabel">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatusHeaderIcon">
        <item name="android:layout_width">@dimen/status_header_icon_height</item>
        <item name="android:layout_height">@dimen/status_header_icon_height</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
