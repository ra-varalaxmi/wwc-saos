<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_button_bg"
                android:paddingBottom="@dimen/recent_item_padding"
                android:paddingTop="@dimen/recent_item_padding"
                android:paddingLeft="@dimen/recent_item_padding"
                android:paddingRight="@dimen/recent_item_padding"
                android:layout_marginBottom="@dimen/recent_item_bottom_margin"
                android:clickable="true">

    <ImageView
        android:id="@+id/recent_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/recent_item_bottom_margin"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/recent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StatusRecentDate"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_toRightOf="@id/recent_icon"
        android:layout_toLeftOf="@id/recent_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_title"
            style="@style/StatusRecentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/recent_message"
            style="@style/StatusRecentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>